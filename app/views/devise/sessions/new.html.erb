<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class='col-sm-6'>
      <div class='input-group'>
        <%= f.text_field :email, autofocus: true, class: %w(form-control) %>
        <span class='input-group-addon'>
          <span class='glyphicon glyphicon-envelope'></span>
        </span>
      </div>
    </div>

    <div class='col-sm-6'>
      <div class='input-group'>
        <%= f.password_field :password, autofocus: true,
        class: %w(form-control) %>
        <span class='input-group-addon'>
          <span class='glyphicon'><i class='fa fa-key'></i></span>
        </span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='col-sm-6'>
      <div class="actions">
        <%= f.submit "Connexion", class: %w(btn btn-success) %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class='col-sm-6'>
      <div class="form-group">
        <div class="input-group">
          <%= f.check_box :remember_me %> Se souvenir de moi
        </div>
      </div>
    </div>
    <% end -%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
